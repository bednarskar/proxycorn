<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.VBox" id="Window" fx:id="loadFilterWindow" maxHeight="300"
         maxWidth="700" minHeight="300" minWidth="700" prefHeight="300.0" prefWidth="700.0"
         style="-fx-background-color: #dfdfdf;" xmlns="http://javafx.com/javafx/8.0.171"
         xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@css/styles.css" fx:controller="com.bednarskar.proxycorn.controllers.LoadFilterWindowController" >
    <AnchorPane maxHeight="120" maxWidth="300" prefHeight="120" prefWidth="300" VBox.vgrow="ALWAYS"
                fx:id="mainAnchor">
        <Label text="Load filter: " layoutY="30" layoutX="30" fx:id="label"/>
        <Button fx:id="load" layoutX="260.0" layoutY="240.0" mnemonicParsing="false"
                prefHeight="33.0" prefWidth="65.0" maxHeight="33" maxWidth="65" minWidth="65" minHeight="33"
                visible="true" text="LOAD"
                textAlignment="center">
        </Button>
        <ScrollPane fx:id="filtersAll" layoutX="0" layoutY="0" style="-fx-background-color: #ccccd8;" minWidth="300"
                    maxWidth="300" prefWidth="300" prefHeight="200" vbarPolicy="AS_NEEDED" hbarPolicy="AS_NEEDED"
                    prefViewportHeight="40" xmlns="http://javafx.com/javafx/8.0.171"
                    xmlns:fx="http://javafx.com/fxml/1"
                    stylesheets="@css/styles.css">
            <GridPane fx:id="labelsForFilter"/>
        </ScrollPane>
        <TextArea fx:id="prevArea" layoutX="300" layoutY="0" maxWidth="300" maxHeight="200" minHeight="200"
                  wrapText="true" editable="false"/>
    </AnchorPane>
</fx:root>
